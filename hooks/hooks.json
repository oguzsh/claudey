{
	"$schema": "https://json.schemastore.org/claude-code-settings.json",
	"hooks": {
		"PreToolUse": [
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" block-dev-server"
					}
				],
				"description": "Block dev servers outside tmux - ensures you can access logs"
			},
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" tmux-reminder"
					}
				],
				"description": "Reminder to use tmux for long-running commands"
			},
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" git-push-reminder"
					}
				],
				"description": "Reminder before git push to review changes"
			},
			{
				"matcher": "Write",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" block-random-docs"
					}
				],
				"description": "Block creation of random .md files - keeps docs consolidated"
			},
			{
				"matcher": "Edit|Write",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" suggest-compact"
					}
				],
				"description": "Suggest manual compaction at logical intervals"
			}
		],
		"PreCompact": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" pre-compact"
					}
				],
				"description": "Save state before context compaction"
			}
		],
		"SessionStart": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" session-start"
					}
				],
				"description": "Load previous context and detect package manager on new session"
			}
		],
		"PostToolUse": [
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" pr-created-log"
					}
				],
				"description": "Log PR URL and provide review command after PR creation"
			},
			{
				"matcher": "Bash",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" build-analysis",
						"async": true,
						"timeout": 30
					}
				],
				"description": "Example: async hook for build analysis (runs in background without blocking)"
			},
			{
				"matcher": "Edit",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" post-edit-format"
					}
				],
				"description": "Auto-format JS/TS files with Prettier after edits"
			},
			{
				"matcher": "Edit",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" post-edit-typecheck"
					}
				],
				"description": "TypeScript check after editing .ts/.tsx files"
			},
			{
				"matcher": "Edit",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" post-edit-console-warn"
					}
				],
				"description": "Warn about console.log statements after edits"
			}
		],
		"Stop": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" check-console-log"
					}
				],
				"description": "Check for console.log in modified files after each response"
			}
		],
		"SessionEnd": [
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" session-end"
					}
				],
				"description": "Persist session state on end"
			},
			{
				"matcher": "*",
				"hooks": [
					{
						"type": "command",
						"command": "\"${CLAUDE_PLUGIN_ROOT}/hooks/bin/claudey-hooks\" evaluate-session"
					}
				],
				"description": "Evaluate session for extractable patterns"
			}
		]
	}
}
